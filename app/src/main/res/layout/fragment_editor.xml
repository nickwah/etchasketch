<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:markers="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MarkersActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@color/black"
    >

   	<include layout="@layout/actionbar"
   	    android:id="@+id/actionbar"
   		android:layout_width="match_parent"
   		android:layout_height="@dimen/action_bar_height"
   		/>

    <include layout="@layout/colors_horizontal"
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        />

    <include layout="@layout/tools"
        android:id="@+id/tools"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/action_bar_height"
        android:layout_marginBottom="96dp"
        android:layout_alignParentLeft="true"
        />

    <com.mylikes.likes.etchasketch.RoundMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        markers:corner="bottomleft"
        markers:mainIcon="@drawable/check"
        markers:backgroundColor="@color/btn_fg"
        >
        <com.mylikes.likes.etchasketch.RoundSubMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            markers:menuIcon="@drawable/flash_nobg_auto"
            markers:slideColor="@color/btn_pressed_bg"
            markers:icon1="@drawable/flash_nobg_off"
            markers:value1="test"
            markers:icon2="@drawable/close_x"
            markers:value2="test2"
            markers:icon3="@drawable/flash_nobg_on"
            markers:value3="test"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paintbrush"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_button"
            />

        </com.mylikes.likes.etchasketch.RoundMenu>

</RelativeLayout>
